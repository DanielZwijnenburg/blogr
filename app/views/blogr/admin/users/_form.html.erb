<%= form_for @user, :url => blogr_admin_users_path do |f|%>
    <% if @user.errors.any?%>
        <div class="message notice">
            <% if @user.errors.any? %>
                <div id="errorExplanation">
                  <h2><%= pluralize(@user.errors.count, "error") %> prohibited this record from being saved:</h2>
                  <% @user.errors.full_messages.each do |msg| %>
                      <%= msg %><br/>
                  <% end %>
                </div>
            <% end %>
        </div>

    <% end %>
    <p>
        <table style="width:400px;">
            <tr>
                <td><%= f.label :name%></td>
                <td><%= f.text_field :name, :style => "color: rgb(170, 170, 170);"%></td>
            </tr>
            <tr>
                <td><%= f.label :email%></td>
                <td><%= f.text_field :email, :style => "color: rgb(170, 170, 170);"%></td>
            </tr>
            <tr>
                <td><%= f.label :password%></td>
                <td><%= f.password_field :password, :style => "color: rgb(170, 170, 170);"%></td>
            </tr>
            <tr>
                <td><%= f.label :password_confirmation %></td>
                <td><%= f.password_field :password_confirmation %></td>
            </tr>
        </table>
        <%= f.submit "Register", :class => "large button button-gray fr" %>
    </p>
<% end %>