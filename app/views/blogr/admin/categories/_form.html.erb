<%= form_for @category, :url => blogr_admin_categories_path do |f|%>
    <%= render "blogr/shared/error_messages", :object => @category %>
    <table>
        <tr>
            <td><%= f.label :title%></td>
            <td><%= f.text_field :title%></td>
        </tr>
        <tr>
            <td><%= f.submit "create category", :class => "button button-green" %></td>
        </tr>
    </table>
<% end %>
