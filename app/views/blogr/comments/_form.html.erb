<% form_for [@post, @comment], :url => blogr_post_comments_path(@post) do |f|%>
    <table>
        <tr>
            <td><%= f.label :name%></td>
            <td><%= f.text_field :name%><td>
        </tr>
        <tr>
            <td><%= f.label :title%></td>
            <td><%= f.text_field :title%></td>
        </tr>
        <tr>
            <td><%= f.label :body%></td>
            <td><%= f.text_area :body%></td>
        </tr>
        <tr>
            <td><%= f.submit%></td>
        </tr>
    </table>
<% end %>