<% form_for [@page, @invoice], :url => blogr_page_inquiries_path(@page) do |f|%>
    <table>
        <tr>
            <td><%= f.label :name%></td>
            <td><%= f.text_field :name%><td>
        </tr>
        <tr>
            <td><%= f.label :email%></td>
            <td><%= f.text_field :email%></td>
        </tr>
        <tr>
            <td><%= f.label :question%></td>
            <td><%= f.text_area :question%></td>
        </tr>
        <tr>
            <td><%= f.submit%></td>
        </tr>
    </table>
<% end %>